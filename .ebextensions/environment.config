packages:
  yum:
    libmemcached-devel: []
option_settings:
    aws:elasticbeanstalk:container:php:phpini:
        document_root: /public
    aws:elasticbeanstalk:environment:process:default:
        HealthCheckPath: /health-check
container_commands:
    01-migration:
        command: "php artisan migrate --force"
        leader_only: true
commands:
    01_install_memcached:
        command: /usr/bin/yes 'no'| /usr/bin/pecl7 install memcached
        test: '! /usr/bin/pecl7 info memcached'
    02_rmfromphpini:
        command: /bin/sed -i -e '/extension="memcached.so"/d' /etc/php.ini
    03_createconf:
        command: /bin/echo 'extension="memcached.so"' > /etc/php-7.4.d/41-memcached.ini
        test: '/usr/bin/pecl7 info memcached'